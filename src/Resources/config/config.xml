<?xml version="1.0" encoding="UTF-8"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/shopware/trunk/src/Core/System/SystemConfig/Schema/config.xsd">

    <card>
        <title>Configuration</title>

        <component name="sw-entity-single-select">
            <name>customerGroup</name>
            <entity>customer_group</entity>
            <label>Choose a Customer Group</label>
            <helpText>Choose customer group</helpText>
        </component>

        <input-field type="bool">
            <name>hidePaymentUpdate</name>
            <defaultValue>1</defaultValue>
            <label>Hide Payment Update</label>
        </input-field>

        <input-field type="bool">
            <name>hideAddressUpdate</name>
            <defaultValue>1</defaultValue>
            <label>Hide Address Update</label>
        </input-field>

        <input-field type="bool">
            <name>hideAddressDelete</name>
            <defaultValue>1</defaultValue>
            <label>Hide Address Delete</label>
        </input-field>

        <input-field type="bool">
            <name>switchDefaultShippingPaymentAddress</name>
            <defaultValue>1</defaultValue>
            <label>Hide switching default payment and shipping address</label>
        </input-field>

    </card>

</config>
